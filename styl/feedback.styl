@import 'variables'

.feedback
  margin-top: 2rem

.feedback__input
  display block
  width 100%
  line-height

.feedback__comment
  resize none

.feedback__text
  font-family: Roboto, sans-serif
  font-size 1rem
  color mtc

.feedback__button
  border 0
  background transparent
  font-family Roboto, sans-serif
  font-size 1rem
  font-weight: bold
  line-height 1.5rem
  height 1.5rem
  display: inline-block
  vertical-align middle
  transition tt
  padding 0 10px
  margin: 0
  color mtc
  float right
  &:hover
    color white
    background-color blue
    transition tt
    border-radius .2rem

.feedback__half
  overflow: hidden
  margin-bottom: 1rem;

@media screen and (max-width: 767px)
  .feedback__half
    text-align center
  .feedback__button
    float none
  .feedback__group
    text-align left
